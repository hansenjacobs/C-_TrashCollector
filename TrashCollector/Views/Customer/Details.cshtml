@model Customer
@{
    ViewBag.Title = Model.NameFirst + " " + Model.NameLast + " - Customer Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer Details</h2>
<p>@Html.ActionLink("Edit", "Edit", "Customer", new { id = Model.UserId }, new { @class = "btn btn-default" }) </p>
<dl class="dl-horizontal">
    <dt>Name</dt>
    <dd>@Model.NameFirstLast</dd>
    <dt>Phone</dt>
    <dd>@Model.Phone</dd>
    <dt>Weekly Pick-Up</dt>
    <dd>@Model.WeeklyPickupDay.Name</dd>
    <dt>Address</dt>
    <dd>
        @Model.Address.AddressLine
        @Model.Address.PostalCode.City.Name, @Model.Address.PostalCode.City.State.AbbreviationShort @Model.Address.PostalCode.Code
        <div id="map" onload="initialize()"></div>
    </dd>
</dl>